<h1>Edite seu Livro</h1>
<%= form_for(@livro) do |f| %>
  <p>
    <%= f.label :titulo %><br>
    <%= f.text_field :titulo %>
  </p>
 
  <p>
    <%= f.label :autor %><br>
    <%= f.text_field :autor %>
  </p>
 
   <p>
    <%= f.label :edicao %><br>
    <%= f.number_field :edicao %>
  </p>

    <p>
    <%= f.label :condicao %><br>
    <%= f.text_field :condicao %>
  </p>

    <p>
    <%= f.label :descricao %><br>
    <%= f.text_area :descricao %>
  </p>

    <p>
    <%= f.label :imagem %><br>
    <%= f.url_field :imagem %>
  </p>

  <p>
    <%= f.submit "Salvar" %>
  </p>
<% end %>

<%= link_to 'Voltar', livros_path %>