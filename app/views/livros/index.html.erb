<h1>Livros Disponiveis</h1>
 
<table>
  <tr>
    <th></th>
    <th>Titulo</th>
    <th>Condicao</th>
  </tr>
 
  <% @livros.each do |livro| %>
    <tr>
      <td><%= image_tag(livro.imagem, height: '64', width: '64') %></td>
      <td><%= livro.titulo %></td>
      <td><%= livro.condicao %></td>
      <td><%= link_to 'Consultar', livro_path(livro) %></td>
      <td><%= link_to 'Editar', edit_livro_path(livro) %></td>
      <td><%= link_to 'Excluir', livro_path(livro),
              method: :delete,
              data: { confirm: 'Vai apagar mesmo?' } %></td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to 'Cadastre seu livro', new_livro_path %>